# BlueSky API credentials
BLUESKY_USERNAME=your-username.bsky.social
BLUESKY_PASSWORD=your-app-password

# GitHub API credentials and repository info
GITHUB_TOKEN=ghp_********************
# GitHub Actionsで実行する場合は自動的に設定される
# GITHUB_REPOSITORY=your-username/your-repository

# 最後に処理したパッケージの公開日時（UNIX秒）
# GitHub Actionsでは workflow YAMLで ${{ vars.LAST_ITEM_PUBDATE || '1' }} を環境変数として設定
LAST_ITEM_PUBDATE=1

# Packagist RSS feed URL
PACKAGIST_RSS_URL=https://packagist.org/feeds/releases.rss

# Log settings
LOG_LEVEL=info
